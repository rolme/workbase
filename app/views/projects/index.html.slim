.row
  .col-sm-12
    h1 = fa_icon('th-list', text: "Projects")

    ul.list-inline
      li
        a data-toggle="modal" data-placement="top" title="add profile" href="#modal-find-client"
          = fa_icon('plus-square', text: "Add")
    hr

.row
  .col-sm-12
    table.table.table-striped.table-hover
      thead
        tr
          th company
          th name
          th created at
          th start date
          th end date
          th value
          th
      tbody
        - @projects.each do |project|
          tr data-url=project_path(project)
            td = project.client_company_name
            td = project.name
            td = project.created_at.in_time_zone("Pacific Time (US & Canada)")
            td = project.start_date
            td = project.end_date
            td.text-center = number_to_currency(project.total_material_cost, format: "%n")
            td.text-right
              =  fa_icon('edit')
              =< fa_icon('trash')
